@import "./styles/mixins.styl"
@import "./styles/fonts.styl"

html {
    font-size: 1rem;
    font-family: "Lato";

    body {
        margin: 0;
        padding: 0;
        no-select();
        
        :global(#root) {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .app {
            background-color: var(--theme-palette-background-paper);
            display: flex;
            flex-direction: column;
            height: 100vh;
            width: 100vw;

            &.help {
                cursor: help !important;
            }
        }
        
        .help-popup {
            z-index: 9999999;
            padding: 12px;

            .header {
                font-weight: bold;
                margin-bottom: 8px;
            }

            .content {
                p {
                    &:first-child {
                        margin-top: 0;
                    }

                    &:last-child {
                        margin-bottom: 0;
                    }
                }
            } 
        }

        :global(#help-backdrop) {
            position: absolute;
            width: 100vw;
            height: 100vh;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
            vendor("backdrop-filter", blur(2px));
        }
    }
}

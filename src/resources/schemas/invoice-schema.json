{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Address": {
      "properties": {
        "addressString": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "officeNo": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "streetNo": {
          "type": "string"
        }
      },
      "required": ["addressString", "street", "streetNo", "postalCode", "city"],
      "type": "object"
    },
    "Customer": {
      "properties": {
        "address": {
          "$ref": "#/definitions/Address"
        },
        "contact": {
          "properties": {
            "email": {
              "type": "string"
            },
            "phone1": {
              "type": "string"
            },
            "phone2": {
              "type": "string"
            },
            "website": {
              "type": "string"
            }
          },
          "required": ["email", "phone1", "website"],
          "type": "object"
        },
        "name": {
          "type": "string"
        },
        "nip": {
          "type": "string"
        }
      },
      "required": ["name", "nip", "address", "contact"],
      "type": "object"
    },
    "Item": {
      "properties": {
        "description": {
          "type": "string"
        },
        "grossCost": {
          "type": "number"
        },
        "gtu": {
          "type": "string"
        },
        "netCost": {
          "type": "number"
        },
        "netPrice": {
          "type": "number"
        },
        "no": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        },
        "taxAmount": {
          "type": "number"
        },
        "taxRate": {
          "type": "number"
        }
      },
      "required": ["no", "description", "quantity", "netPrice", "taxRate", "netCost", "taxAmount", "grossCost"],
      "type": "object"
    },
    "Venture": {
      "properties": {
        "address": {
          "$ref": "#/definitions/Address"
        },
        "bank": {
          "properties": {
            "account": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": ["name", "account"],
          "type": "object"
        },
        "contact": {
          "properties": {
            "email": {
              "type": "string"
            },
            "mobile": {
              "type": "string"
            },
            "phone": {
              "type": "string"
            },
            "website": {
              "type": "string"
            }
          },
          "required": ["email", "phone", "website"],
          "type": "object"
        },
        "logo": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "nip": {
          "type": "string"
        }
      },
      "required": ["name", "nip", "address", "contact", "bank"],
      "type": "object"
    },
    "properties": {
      "comments": {
        "type": "string"
      },
      "customer": {
        "$ref": "#/definitions/Customer"
      },
      "dueDays": {
        "type": "number"
      },
      "grossTotal": {
        "type": "number"
      },
      "issueDate": {
        "format": "date-time",
        "type": "string"
      },
      "items": {
        "items": {
          "$ref": "#/definitions/Item"
        },
        "type": "array"
      },
      "name": {
        "type": "string"
      },
      "netTotal": {
        "type": "number"
      },
      "paymentMethod": {
        "type": "string"
      },
      "purchaseDate": {
        "format": "date-time",
        "type": "string"
      },
      "taxTotal": {
        "type": "number"
      },
      "theme": {
        "properties": {
          "colors": {
            "properties": {
              "primary": {
                "type": "string"
              }
            },
            "required": ["primary"],
            "type": "object"
          }
        },
        "required": ["colors"],
        "type": "object"
      },
      "totalAmountInWords": {
        "type": "string"
      },
      "venture": {
        "$ref": "#/definitions/Venture"
      }
    }
  },
  "required": [
    "name",
    "issueDate",
    "purchaseDate",
    "dueDays",
    "paymentMethod",
    "venture",
    "customer",
    "items",
    "netTotal",
    "taxTotal",
    "grossTotal",
    "totalAmountInWords",
    "comments",
    "theme"
  ],
  "type": "object"
}

.progress {
    position: relative;
    display: inline-flex;
  
    .label-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    &.absolute {
        position: absolute;
        display: flex;
        justify-self: anchor-center;
        align-self: anchor-center;
    }

    &.inline {
        position: relative;
    }
}

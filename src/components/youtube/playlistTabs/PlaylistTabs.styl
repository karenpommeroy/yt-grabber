progress-bg-color = var(--theme-palette-primary-light)

.playlist-tabs {
    height: 100%;
    display: flex;
    flex-direction: column;

    .tablist {
        height: 58px;
    }

    .tab {
        margin-right: 5px;
        padding: 8px 8px 8px 8px;
        min-height: 0;
        border-left: 1px solid var(--theme-palette-divider);
        border-top: 1px solid var(--theme-palette-divider);
        border-top-left-radius: var(--theme-shape-borderRadius);
        border-top-right-radius: var(--theme-shape-borderRadius);

        &:first-child {
            border-left: 1px solid var(--theme-palette-divider);
        }

        &:not(last-child) {
            border-right: 1px solid var(--theme-palette-divider);
        }

        &:hover {
            background-color: var(--theme-palette-divider);
        }
        
        .tab-remove-button {
            transform: scale(0.65) translate(-2px, -30px);

            .tab-remove-icon {
                padding: 0;
                border-radius: 50%;
                color: var(--theme-palette-text-secondary);

                &:hover {
                    color: var(--theme-palette-text-disabled);
                    background-color: var(--theme-palette-text-secondary);
                }
            }
        }

        .tab-title {
            margin-left: .3rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.8rem;
        }

        .tab-icon {
            border-radius: 50%;
            border: 2px solid var(--theme-palette-primary-light);
            
            &.loading {
                opacity: .15;
            }
        }

        .tab-progress {
            position: absolute;
            left: 8px;
            top: 8px;
            border-radius: 50%;
        }
    }

    .tab-panel {
        display: flex;
        overflow: overlay;
        flex-direction: column;
        padding: 1rem 0.5rem;

        &[hidden] {
            display: none;
        }
    }
}

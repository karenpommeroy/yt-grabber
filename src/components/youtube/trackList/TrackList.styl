@import "../../../styles/mixins.styl"

.track-list {
    flex-grow: 1;
    overflow: overlay;
    
    .track {
        padding-top: 0;
        padding-bottom: 0;
        padding-left: 5px;
        padding-right: 5px;
        vendor("transition", background-color .25s ease-in-out);

        &:hover {
            background-color: var(--theme-palette-divider);

            .actions {
                opacity: 1;
            }
        }

        .actions {
            vendor("transition", opacity .25s ease-in-out);
            opacity: 0;
        }

        .track-action {
            min-width: 0;
        }

        .number-column {
            width: 1rem;
            align-content: center;
            justify-items: center;

            .number {
                font-size: 1rem;
            }
        }

        .image-column {
            width: 4rem;
            align-content: center;
            justify-items: center;

            .image > img {
                width: 110%;
                height: 110%;
            }
        }
    }

    .column {
        display: flex;
        align-self: center;
        align-items: center;
    }

    .completed-icon {
        width: 2.3rem;
        height: 2.3rem;
    }

    .cut-icon {
        font-size: 18px;
        margin-right: 0.25rem;
    }
}

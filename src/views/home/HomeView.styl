@import "../../styles/mixins.styl"
@import "../../styles/fonts.styl"

.home {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    justify-content: space-between;
    overflow: hidden;

    .header {
        > div:global(.MuiGrid2-root) {
            display: flex;
        }
    }

    .formats {
        justify-content: center;
    }

    .header {
        position: relative;

        .format-info {
            display: flex;
            justify-content: center;
        }
    }

    .cancel {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        top: 0;
        z-index: 999;
        height: 100%;
        backdrop-filter: brightness(0.6);
    }

    .content {
        overflow: hidden;
        flex-grow: 1;
        align-content: flex-start;
        justify-content: center;
        padding-top: 0;

        .error {
            width: 100%;
            justify-content: center;
        }

        .loader {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }

    .footer {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0.5rem 0.5rem 1rem 0.5rem;
    }
}
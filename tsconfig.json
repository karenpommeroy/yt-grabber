{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
    "typeRoots": ["./src/@types"],
    "paths": {
      "@tests/*": ["tests/*"],
      "@app/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json", "webpack.config.ts", "jest.setup.ts"],
  "exclude": ["node_modules"]
}

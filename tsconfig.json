{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./webpack.config.ts"],
  "exclude": ["node_modules"]
}
